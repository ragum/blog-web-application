<%- include("partials/header.ejs") %>
<h1>Edit Blog Post</h1>
<form action="/edit/<%= post.id %>" method="POST" enctype="multipart/form-data">
	<input type="text" name="title" value="<%= post.title %>" required><br><br>
	<textarea name="description" rows="5" cols="30" required><%= post.description %></textarea><br><br>
	<% if (post.imagePath) { %>
	<img src="<%= post.imagePath %>" alt="Image" width="300px"><br><br>
	<% } %>
	<input type="file" name="image" accept="image/*"><br><br>
	<button type="submit">Update</button>
</form>
<br>
<a href="/">Back to Home</a>
